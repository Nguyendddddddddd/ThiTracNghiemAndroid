<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FThiSinh">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edtMaThiSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Thí sinh"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edtTenThiSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên thí sinh"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/spnLop"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <Button
            android:id="@+id/btnThemThiSinh"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm thí sinh"
            android:textSize="20sp"
            />
        <ListView
            android:id="@+id/lvThiSinh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</FrameLayout>