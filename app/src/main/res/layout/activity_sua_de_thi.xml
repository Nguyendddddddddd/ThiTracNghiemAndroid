<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaDeThi"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin đề thi"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_gravity="left"
        />

    <EditText
        android:id="@+id/edtMaDeThiSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã đề thi"
        android:layout_marginTop="15dp"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/edtTenDeThiSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đề thi"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edtThoiGianLamBaiSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời gian làm bài"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edtTongSoCauHoiSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tổng số câu"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/spnMonSua"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <Button
        android:id="@+id/btnSuaDeThiSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa đề thi"
        android:layout_marginTop="15dp"
        />

</LinearLayout>