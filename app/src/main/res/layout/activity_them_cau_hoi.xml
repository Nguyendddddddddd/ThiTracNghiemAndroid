<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemCauHoiActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <Spinner
            android:id="@+id/spnMonThem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <EditText
            android:id="@+id/edtNhapCauHoi"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:hint="Nhập nội dung câu hỏi"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edtDapAna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án a"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edtDapAnb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án b"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edtDapAnc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án c"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edtDapAnDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án đúng"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/btnThemCauHoi"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm câu hỏi"
            android:textSize="20sp"
            />
    </LinearLayout>

</FrameLayout>